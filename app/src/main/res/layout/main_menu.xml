<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s3529589.mad_a1.Activity.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/friendMenuBtn"
            android:text="@string/main_Friends"
            android:layout_weight="1"
            android:background="@color/mainMenuFriend"
            android:textColor="@color/menuTextColor"
            android:textStyle="bold"
            android:textSize="22sp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/meetingMenuBtn"
            android:text="@string/main_Meetings"
            android:layout_weight="1"
            android:background="@color/mainMenuMeeting"
            android:textColor="@color/menuTextColor"
            android:textStyle="bold"
            android:textSize="22sp"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
