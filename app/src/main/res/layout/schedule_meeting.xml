<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s3529589.mad_a1.Activity.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/meetingTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="@string/schedule_title_hint"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fromLbl"
            android:layout_below="@+id/meetingTitle"
            android:text="@string/schedule_from_label"
            android:textColor="@color/headingTextColor"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startTimeLbl"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fromLbl"
            android:hint="@string/schedule_start_hint"
            android:textSize="15sp"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startTimeBtn"
            android:text="@string/schedule_start_button"
            android:layout_alignTop="@+id/fromLbl"
            android:layout_alignBottom="@id/startTimeLbl"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/toLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/schedule_to_label"
            android:textColor="@color/headingTextColor"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/startTimeLbl"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/finishTimeLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toLbl"
            android:hint="@string/schedule_finish_hint"
            android:layout_marginLeft="10dp"
            android:textSize="15sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finishTimeBtn"
            android:layout_alignTop="@+id/toLbl"
            android:layout_alignBottom="@+id/finishTimeLbl"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/schedule_finish_button"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/meeting_location_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meeting_location_text_view"
            android:textColor="@color/headingTextColor"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/finishTimeLbl"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/meeting_location_edit_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/meeting_location_text_view"
            android:hint="@string/meeting_location_edit_text_hint"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmMeetingBtn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/schedule_confirm_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/selectFriendsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/meeting_location_edit_text"
            android:text="@string/schedule_select_friends_button"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"/>

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>