<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s3529589.mad_a1.Activity.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/meetingTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="Meeting Title"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fromLbl"
            android:layout_marginTop="20sp"
            android:layout_below="@+id/meetingTitle"
            android:text="From:"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startTimeLbl"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fromLbl"
            android:hint="Start Time"
            android:textSize="15sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startTimeBtn"
            android:layout_alignTop="@+id/fromLbl"
            android:layout_alignBottom="@+id/startTimeLbl"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Start time" />

        <TextView
            android:id="@+id/toLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To:"
            android:textSize="20sp"
            android:layout_marginTop="20sp"
            android:layout_below="@+id/startTimeLbl"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/finishTimeLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toLbl"
            android:hint="Finish Time"
            android:textSize="15sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finishTimeBtn"
            android:layout_alignTop="@+id/toLbl"
            android:layout_alignBottom="@+id/finishTimeLbl"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Finish time"
             />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectFriendsBtn"
            android:layout_marginTop="20sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/finishTimeBtn"
            android:text="Select friends" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmMeetingBtn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Confirm" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>